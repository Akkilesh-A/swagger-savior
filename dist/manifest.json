{
    "manifest_version": 3,
    "name": "Swagger Savior ✌️",
    "version": "1.0.0",
    "description": "Hit your endpoint, copy your token, authorize yourself with just a hit of a button",
    "icons":{
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "64": "images/icon-64.png",
        "128": "images/icon-128.png"
    },
    "action":{
        "default_popup":"index.html"
    },
    "permissions":[
        "scripting",
        "storage",
        "notifications",
        "activeTab"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}